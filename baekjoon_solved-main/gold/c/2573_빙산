#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <string.h>

#define MAXQ 100000
#define MAXN 301

typedef struct { 
    int x, y; 
} Node;

int n, m;
int graph[MAXN][MAXN];
int visited[MAXN][MAXN];
int melt[MAXN][MAXN];

int dx[4] = { -1,1,0,0 };
int dy[4] = { 0,0,1,-1 };

typedef struct {
    Node data[MAXQ];
    int front, rear;
} Queue;

void initQueue(Queue* q) {
    q->front = q->rear = 0;
}
int isempty(Queue* q) {
    return q->front == q->rear;
}
void enqueue(Queue* q, int x, int y) {
    q->data[q->rear].x = x;
    q->data[q->rear].y = y;
    q->rear = (q->rear + 1) % MAXQ;
}
Node dequeue(Queue* q) {
    Node r = q->data[q->front];
    q->front = (q->front + 1) % MAXQ;
    return r;
}

int countWater(int x, int y) {
    int cnt = 0;
    for (int i = 0; i < 4; i++) {
        int nx = x + dx[i];
        int ny = y + dy[i];
        if (0 <= nx && nx < n && 0 <= ny && ny < m) {
            if (graph[nx][ny] == 0)
                cnt++;
        }
    }
    return cnt;
}

void bfs(int sx, int sy) {
    Queue q;
    initQueue(&q);
    enqueue(&q, sx, sy);
    visited[sx][sy] = 1;

    while (!isempty(&q)) {
        Node cur = dequeue(&q);
        int x = cur.x, y = cur.y;

        for (int i = 0; i < 4; i++) {
            int nx = x + dx[i];
            int ny = y + dy[i];
            if (0 <= nx && nx < n && 0 <= ny && ny < m) {
                if (graph[nx][ny] > 0 && !visited[nx][ny]) {
                    visited[nx][ny] = 1;
                    enqueue(&q, nx, ny);
                }
            }
        }
    }
}

int main() {
    scanf("%d %d", &n, &m);
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++)
            scanf("%d", &graph[i][j]);
    }

    int year = 0;

    while (1) {
        memset(visited, 0, sizeof(visited));

        int parts = 0;
        for (int i = 0; i < n; i++) {
            for (int j = 0; j < m; j++) {
                if (graph[i][j] > 0 && !visited[i][j]) {
                    bfs(i, j);
                    parts++;
                }
            }
        }

      
        if (parts >= 2) {
            printf("%d\n", year);
            return 0;
        }
        if (parts == 0) {
            printf("0\n");
            return 0;
        }

        memset(melt, 0, sizeof(melt));
        for (int i = 0; i < n; i++) {
            for (int j = 0; j < m; j++) {
                if (graph[i][j] > 0) {
                    melt[i][j] = countWater(i, j);
                }
            }
        }

        for (int i = 0; i < n; i++) {
            for (int j = 0; j < m; j++) {
                graph[i][j] -= melt[i][j];
                if (graph[i][j] < 0) graph[i][j] = 0;
            }
        }
        year++;
    }
}
##bfs 내부에서 큐 선언 및 초기화 -> 매개변수 수 줄이기 가능
